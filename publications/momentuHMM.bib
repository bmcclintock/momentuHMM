@ARTICLE{10.3389/fmars.2022.816659,
  
AUTHOR={Collins, Sydney M. and Hedd, April and Fifield, David A. and Wilson, David R. and Montevecchi, William A.},   
	 
TITLE={Foraging Paths of Breeding Leach’s Storm-Petrels in Relation to Offshore Oil Platforms, Breeding Stage, and Year},      
	
