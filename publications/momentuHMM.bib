@article{
doi:10.1126/sciadv.abf5908,
author = {F. Visser  and V. J. Merten  and T. Bayer  and M. G. Oudejans  and D. S. W. de Jonge  and O. Puebla  and T. B. H. Reusch  and J. Fuss  and H. J. T. Hoving },
title = {Deep-sea predator niche segregation revealed by combined cetacean biologging and eDNA analysis of cephalopod prey},
